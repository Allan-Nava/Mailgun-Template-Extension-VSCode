{
	"name": "mailgun-upload-template-vscode",
	"displayName": "Mailgun Upload Template",
	"description": "Easy way to upload mailgun template",
	"version": "0.0.1",
	"publisher": "Allan-Nava",
	"repository": "https://github.com/Allan-Nava/Mailgun-Template-Extension-VSCode",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command"	: "mailgun-upload-template-vscode.helloWorld",
				"title"		: "Mailgun : Hello World"
			},
			{
				"command"	: "mailgun-upload-template-vscode.config",
				"title"		: "Mailgun : Config - Mailgun connection setting"
			},
			{
				"command"	: "mailgun-upload-template-vscode.upload",
				"title"		: "Mailgun : Upload - Upload the file directly from file locally to Mailgun Server"
			}
		],
		"editor/title/context": [
			{
			  	"command"	: "mailgun-upload-template-vscode.upload",
			  	"group"		: "mailgun-upload-template-vscode"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.6",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"crypto": "^1.0.1",
		"filesize": "^6.1.0",
		"fs": "0.0.1-security",
		"mailgun": "^0.5.0",
		"os": "^0.1.1",
		"path": "^0.12.7"
	}
}
